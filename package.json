{
  "name": "create-mrn-app",
  "version": "0.1.0",
  "description": "CLI to scaffold modern full-stack applications with Next.js, React, Vue, or Astro",
  "author": "MRN Stack",
  "license": "MIT",
  "type": "module",
  "bin": {
    "create-mrn-app": "./dist/index.js"
  },
  "files": [
